<UserControl x:Class="CIOSDigital.FlightPlanner.WorldMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CIOSDigital.FlightPlanner"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="Root"
             Background="Transparent"
             MouseDown="Root_MouseDown"
             MouseUp="Root_MouseUp"
             MouseMove="Root_MouseMove"
             MouseWheel="Root_MouseWheel"
             MouseLeave="Root_MouseLeave">
    <Canvas Name="Picture" Background="Gray">
        <Rectangle Canvas.Left="0" Canvas.Top="0"
                   Height="25" Width="25"
                   Fill="Red"/>
    </Canvas>
</UserControl>
